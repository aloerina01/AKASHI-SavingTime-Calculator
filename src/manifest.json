{
  "manifest_version": 3,
  "name": "AKASHI SavingTime Calculator",
  "version": "1.0.0",
  "description": "AKASHIの残業時間を計算するChrome拡張機能",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://ak4.jp/*attendance*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}

